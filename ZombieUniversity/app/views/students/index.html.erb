<p id="notice"><%= notice %></p>

<h3>Enrolled Studentz</h3>

<div class="row">
  <div class="col s3">
    <%= form_tag(search_students_path, method: "get") do %>
      <%= label_tag(:q, "Search for Studentz:", class: "light-green-text text-accent-3") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search", class: "btn black light-green-text text-accent-3") %>
    <% end %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th align="left">Name:</th>
      <th align="left">Number:</th>
      <th align="left">Email:</th>
      <th align="left">GPA:</th>
      <th align="left">Percent Decomposed:</th>
      <th align="left">Number Of Limbs:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.number %></td>
        <td><%= student.email %></td>
        <td><%= student.gpa %></td>
        <td><%= student.percentDecomposed %></td>
        <td><%= student.numberOfLimbs %></td>
        <td><%= link_to 'Show', student, class: "light-green-text text-accent-1" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: "light-green-text text-accent-1" %></td>
        <td><%= link_to 'DESTROY STUDENT!', student, class: "light-green-text text-accent-1", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Entroll New Student', new_student_path, class: "light-green-text text-accent-1" %>
