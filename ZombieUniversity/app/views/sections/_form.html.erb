<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :semester %><br>
    <%= f.text_field :semester %>
  </div>
  <div class="field">
    <%= f.label :roomNumber %><br>
    <%= f.text_field :roomNumber %>
  </div>
  <div class="field">
    <%= f.label :professor_id %><br>
    <%= f.select(:professor_id, options_from_collection_for_select(Professor.all, :id, :name)) %>
  </div>
  <div class="field">
    <%= f.label :course_id %><br>
    <%= f.select(:course_id, options_from_collection_for_select(Course.all, :id, :name, :number)) %>
	</div>
	<div class="field">
		<% f.label :student_id %><br>
		<%= f.collection_check_boxes(:student_ids, @students, :id, :name) %>
	</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
