<p id="notice"><%= notice %></p>

<h1>Course Sectionz</h1>

<table>
  <thead>
    <tr>
			<th align="left">Course:</th>
			<th align="left">Section:</th>
			<th align="left">Semester:</th>
      <th align="left">Professor Teaching:</th>
      <th align="left">Room Number:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
				<td><%= section.course.name %></td>
        <td><%= section.name %></td>
				<td><%= section.semester %></td>
        <td><%= section.professor.name %></td>
        <td><%= section.roomNumber %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

