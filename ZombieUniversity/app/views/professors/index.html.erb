<h1>Current Professorz</h1>

<table>
  <thead>
    <tr>
      <th align="left">Name:</th>
      <th align="left">Number:</th>
      <th align="left">Email:</th>
      <th align="left"># Of Brains Eaten:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.name %></td>
        <td><%= professor.number %></td>
        <td><%= professor.email %></td>
        <td><%= professor.numberOfBrainsEaten %></td>
        <td><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'DESTROY PROFESSOR!', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

