<p id="notice"><%= notice %></p>

<h3>Current Professorz</h3>

<div class="row">
  <div class="col s3">
    <%= form_tag(search_professors_path, method: "get") do %>
      <%= label_tag(:q, "Search for Professorz:", class: "light-green-text text-accent-3") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search", class: "btn black light-green-text text-accent-3") %>
    <% end %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th align="left">Name:</th>
      <th align="left">Number:</th>
      <th align="left">Email:</th>
      <th align="left"># Of Brains Eaten:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.name %></td>
        <td><%= professor.number %></td>
        <td><%= professor.email %></td>
        <td><%= professor.numberOfBrainsEaten %></td>
          <td><%= link_to 'Show', professor, class: "light-green-text text-accent-1" %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor), class: "light-green-text text-accent-1" %></td>
        <td><%= link_to 'DESTROY PROFESSOR!', professor, class: "light-green-text text-accent-1", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Apply Here', new_professor_path, class: "light-green-text text-accent-1" %>
